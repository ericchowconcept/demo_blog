{% extends "base.html.twig" %}

{% block title %}Article Management{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center my-4">Gestion des Articles</h1>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                {% for data in colonnes %}
                    <th>{{ data }}</th>
                {% endfor %}
                    <th>Category</th>
                    <th>Option</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td><img src="{{ article.image  }}" alt="" width="50px"></td>
                <td>{{ article.content|slice(1,10) }}</td>
                <td>{{ article.createdAt|date('d/m/Y Ã  H:i:s') }}</td>
                <td>{{ article.categorie.title }}</td>
                <td>
                    <a href="" class="text-warning"><i class="fa fa-edit"></i></a>
                    <a href="" class="text-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

















{% endblock %}